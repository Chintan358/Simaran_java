package pettern;

public class P2 {
	public static void main(String[] args) {
		
		int lines = 8;
		int startCount = 1;
		
		for(int j=1;j<=lines;j++)
		{
			for(int k=1;k<=7;k++)
			{
				System.out.print(" ");
			}
			
			for (int i = 1; i <=startCount; i++) 
			{
				System.out.print("*");
			}
			System.out.println();
			startCount++;
		}
		
		
		
	}
}
